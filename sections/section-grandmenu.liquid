<div class="menu-lg-wrapper">
                <section class="menu">
                    <h2 class="h2-title">{{ section.settings.title }}</h2>
                    <p class="h2-subtitle">{{ section.settings.sub_title }}</p>
                    <div class="menu-wrapper inner">
                        {% for block in section.blocks %}
                            <div class="menu-box">
                                <h3 class="menu-items-title">{{ block.settings.title }}</h3>
                                <div class="menu-wrapper-box">
                                    <ul class="menu-wrapper-items">
                                        {% for product in block.settings.menu_collection.products limit: block.settings.number  %}
                                        <li class="menu-items">
                                            <img src="{{ product.featured_image | img_url: 'master' }} " alt="#" class="menu-item">
                                            <p class="menu-items-text">{{ product.title }}</p>
                                            <p class="menu-items-price">{{ product.price | money }}</p>
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
