{% schema %}
{
    "name": "メニュー選択",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "タイトルを入力します",
            "default": "GRAND MENU"
        },
        {
            "type": "text",
            "id": "sub_title",
            "label": "タイトルを入力します",
            "default": "今月のスペシャルランチセット"
        }
    ],
    "blocks": [
        {
            "type": "product",
            "name": "商品選択",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "タイトルを入力します"
                },
                {
                    "type": "collection",
                    "id": "menu_collection",
                    "label": "商品を選択します"
                },
                {
                    "type": "range",
                    "id": "number",
                    "min": 1,
                    "step": 1,
                    "max": 6,
                    "default": 3,
                    "label": "商品数選択"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "メニュー選択"
        }
    ]
}
{% endschema %}